    PUSHBUTTON "Set", ADDIMGDLG_CTLR_BTNTRANSPSET, 10, 118, 45, 15
    PUSHBUTTON "Clear", ADDIMGDLG_CTLR_BTNTRANSPCLEAR, 60, 118, 45, 15
    LTEXT "", ADDIMGDLG_CTLR_TRANSPCOL, 110, 118, 15, 15, SS_BITMAP
